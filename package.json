{
	"name": "iris-studio",
	"version": "0.0.0",
	"description": "WYSIWYG editor for Iris documents",
	"author": "ksk",
	"private": true,
	"type": "module",
	"build": {
		"productName": "Iris Studio",
		"appId": "seki.pw.iris-studio",
		"electronLanguages": [
			"en-US"
		],
		"files": [
			"!src/",
			"!public/",
			"!*.config.js",
			"!pnpm-lock.yaml",
			"!shell.nix"
		],
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			]
		},
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"category": "public.app-category.developer-tools"
		},
		"linux": {
			"target": [
				{
					"target": "appimage",
					"arch": [
						"x64"
					]
				}
			]
		}
	},
	"main": "./out/main/index.cjs",
	"scripts": {
		"dev": "electron-vite dev --watch",
		"build": "electron-vite build",
		"preview": "electron-vite preview",
		"postinstall": "electron-builder install-app-deps",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"lint": "prettier --check . && eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@codemirror/commands": "^6.6.0",
		"@codemirror/language": "^6.10.2",
		"@codemirror/language-data": "^6.5.1",
		"@fontsource/ibm-plex-sans": "^5.0.20",
		"@fontsource/jetbrains-mono": "^5.0.20",
		"@fontsource/vollkorn": "^5.0.20",
		"@iconify-json/tabler": "^1.1.118",
		"@nytimes/react-prosemirror": "^0.6.1",
		"@reduxjs/toolkit": "^2.2.6",
		"@svgr/core": "^8.1.0",
		"@svgr/plugin-jsx": "^8.1.0",
		"@uiw/codemirror-extensions-color": "^4.23.0",
		"@uiw/codemirror-extensions-hyper-link": "^4.23.0",
		"@uiw/codemirror-theme-github": "^4.23.0",
		"@uiw/react-codemirror": "^4.23.0",
		"@vitejs/plugin-react": "^4.3.1",
		"autoprefixer": "^10.4.19",
		"electron": "^31.2.1",
		"electron-builder": "^24.13.3",
		"electron-vite": "^2.3.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-promise": "^6.4.0",
		"eslint-plugin-react": "^7.34.4",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.8",
		"iris": "github:irisedu/iris",
		"nightwind": "^1.1.13",
		"postcss": "^8.4.39",
		"prettier": "^3.3.3",
		"prosemirror-commands": "^1.6.0",
		"prosemirror-history": "^1.4.1",
		"prosemirror-inputrules": "^1.4.0",
		"prosemirror-keymap": "^1.2.2",
		"prosemirror-model": "^1.22.2",
		"prosemirror-state": "^1.4.3",
		"prosemirror-view": "^1.33.9",
		"react": "^18.2.0",
		"react-arborist": "^3.4.0",
		"react-aria-components": "^1.2.1",
		"react-dom": "^18.2.0",
		"react-redux": "^9.1.2",
		"react-resizable-panels": "^2.0.21",
		"redux-remember": "^5.1.0",
		"tailwindcss": "^3.4.6",
		"unplugin-icons": "^0.19.0",
		"use-resize-observer": "^9.1.0",
		"vite": "^5.3.4",
		"vite-plugin-svgr": "^4.2.0"
	}
}
